<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#678FFE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageViewEditarPerfil"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/foto"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Telefone"/>
                     <EditText
                         android:id="@+id/textViewEditarTelefone"
                         android:layout_width="150dp"
                         android:layout_height="wrap_content"
                         android:hint="Seu Telefone 1"
                         android:textSize="14sp"/>
                     <EditText
                         android:id="@+id/textViewEditarTelefone2"
                         android:layout_width="150dp"
                         android:layout_height="wrap_content"
                         android:hint="Seu Telefone 2"
                         android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:text="Estado civil"/>
            <EditText
                android:id="@+id/textViewEditarConjuge"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:hint="Seu Cônjuge"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:text="Profissão"/>
            <EditText
                android:id="@+id/textViewEditarProfissao"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:hint="Sua Profissão"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:text="E-mail"/>
            <EditText
                android:id="@+id/textViewEditarEmail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:hint="Seu e-mail"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/buttonGuardarPerfil"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Guardar Alterações"
                android:background="@drawable/background_button_login"
                android:layout_gravity="center"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
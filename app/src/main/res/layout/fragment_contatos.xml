            android:textStyle="bold"
            android:textColor="#0247FE"
            android:text="(21)98076-8759  (Tim e WhatsApp)"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
